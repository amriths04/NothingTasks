<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/topContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp">

            <!-- Search Bar -->
            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search"
                android:background="@drawable/search_background"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawableEnd="@android:drawable/ic_btn_speak_now"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary"
                android:textSize="20sp"
                android:fontFamily="@font/nf"
                android:backgroundTint="@android:color/transparent" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <include layout="@layout/grid_card_today"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/grid_card_scheduled"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <include layout="@layout/grid_card_all"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/grid_card_flagged"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- My Lists Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/myListsTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Lists"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="@font/nf"
                    android:paddingStart="4dp" />

                <ImageButton
                    android:id="@+id/addListButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="@color/blueAccent"
                    android:contentDescription="Add New List" />
            </LinearLayout>

            <!-- Scrollable Custom List Section -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myListsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:overScrollMode="never"/>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Bar -->
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp">

        <!-- "+ New Reminder" Text -->
        <TextView
            android:id="@+id/newReminderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+  New Reminder"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:fontFamily="@font/nf"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="@color/textPrimary"
            android:contentDescription="Settings"
            android:padding="6dp" />
    </RelativeLayout>
</RelativeLayout>
