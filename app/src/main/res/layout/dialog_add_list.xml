<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="16dp"
    android:background="@drawable/rounded_dialog_bg"
    android:fontFamily="@font/nf">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New List"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?attr/cardTextPrimary"
        android:gravity="center"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/nf"/>

    <!-- List Name -->
    <EditText
        android:id="@+id/listNameInput"
        android:layout_width="match_parent"
        android:maxWidth="488dp"
        android:layout_height="wrap_content"
        android:hint="List name"
        android:importantForAutofill="no"
        android:textSize="20sp"
        android:fontFamily="@font/nf"
        android:textColor="?attr/cardTextPrimary"
        android:textColorHint="?attr/cardTextSecondary"
        android:padding="0dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:backgroundTint="@android:color/transparent"
        android:inputType="text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dotted_underline" />

    <!-- Description (Optional) -->
    <EditText
        android:id="@+id/listDescInput"
        android:layout_width="match_parent"
        android:maxWidth="488dp"
        android:layout_height="wrap_content"
        android:hint="Description (optional)"
        android:minLines="1"
        android:maxLines="2"
        android:gravity="top"
        android:textSize="18sp"
        android:padding="2dp"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:fontFamily="@font/nf"
        android:textColor="?attr/cardTextPrimary"
        android:textColorHint="?attr/cardTextSecondary"
        android:backgroundTint="@android:color/transparent"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/dotted_underline" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="?attr/cardIconTint"
            android:textSize="20sp"
            android:fontFamily="@font/nf"
            android:layout_marginEnd="16dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="?attr/cardTextPrimary"
            android:textSize="20sp"
            android:fontFamily="@font/nf"
            android:padding="4dp" />
    </LinearLayout>
</LinearLayout>