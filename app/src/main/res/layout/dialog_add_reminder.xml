<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:background="@drawable/rounded_dialog_bg"
    android:fontFamily="@font/nf">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Reminder"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?attr/cardTextPrimary"
        android:gravity="center"
        android:fontFamily="@font/nf"
        android:layout_marginBottom="18dp" />

    <!-- Reminder Title -->
    <EditText
        android:id="@+id/reminderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textSize="18sp"
        android:fontFamily="@font/nf"
        android:textColor="?attr/cardTextPrimary"
        android:textColorHint="?attr/cardTextSecondary"
        android:padding="0dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:backgroundTint="@android:color/transparent"
        android:inputType="text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dotted_underline" />

    <!-- Reminder Description -->
    <EditText
        android:id="@+id/reminderDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description (optional)"
        android:minLines="1"
        android:maxLines="2"
        android:gravity="top"
        android:textSize="18sp"
        android:padding="2dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:fontFamily="@font/nf"
        android:textColor="?attr/cardTextPrimary"
        android:textColorHint="?attr/cardTextSecondary"
        android:backgroundTint="@android:color/transparent"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/dotted_underline" />
    <!-- Date & Time Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <!-- Date Picker -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/pickDateBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:tint="?attr/cardIconTint"
                android:background="@android:color/transparent"
                android:contentDescription="Pick Date" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No date"
                android:textSize="18sp"
                android:textColor="?attr/cardTextSecondary"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nf" />
        </LinearLayout>

        <!-- Time Picker -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <ImageButton
                android:id="@+id/pickTimeBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:tint="?attr/cardIconTint"
                android:background="@android:color/transparent"
                android:contentDescription="Pick Time" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No time"
                android:textSize="18sp"
                android:textColor="?attr/cardTextSecondary"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nf" />
        </LinearLayout>
    </LinearLayout>

    <!-- Date Shortcuts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:paddingHorizontal="2dp">

        <TextView
            android:id="@+id/todayShortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:background="@drawable/pill_border"
            android:textColor="?attr/cardTextSecondary"
            android:textSize="14sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:fontFamily="@font/nf"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true" />


        <TextView
            android:id="@+id/clearDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:background="@drawable/pill_border"
            android:textColor="?attr/cardTextSecondary"
            android:textSize="14sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:fontFamily="@font/nf" />
        <!-- Repeat every + Spinner -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat every"
                android:textSize="14sp"
                android:textColor="?attr/cardTextPrimary"
                android:fontFamily="@font/nf"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/repeatSpinner"
                style="@style/CustomSpinnerStyle"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:spinnerMode="dropdown"
                android:entries="@array/repeat_options"
                android:backgroundTint="?attr/cardTextSecondary"
                android:popupBackground="@drawable/spinner_dropdown_bg"
                android:fontFamily="@font/nf"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="?attr/cardIconTint"
            android:textSize="18sp"
            android:fontFamily="@font/nf"
            android:layout_marginEnd="16dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="?attr/cardTextPrimary"
            android:textSize="18sp"
            android:fontFamily="@font/nf"
            android:padding="8dp" />
    </LinearLayout>

</LinearLayout>
